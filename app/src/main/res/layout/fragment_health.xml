<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_health"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/totalHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Character Total HP"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/damage_reduction"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/damageResistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Damage Resistance"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_health"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <EditText
            android:hint="Enter Character HP Here"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:maxLines="25"
            android:ems="10"
            android:id="@+id/currentHp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nonlethal_damage"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/nonlethalDamage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Nonlethal Damage"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+1"
            android:id="@+id/plus1"
            android:layout_gravity="center"
            android:background="#57b92a"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:textSize="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+5"
            android:id="@+id/plus5"
            android:layout_gravity="center"
            android:background="#57b92a"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:textSize="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+10"
            android:id="@+id/plus10"
            android:layout_gravity="center"
            android:background="#57b92a"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="-1"
            android:textAlignment="gravity"
            android:id="@+id/minus1"
            android:layout_gravity="center"
            android:background="#eb1219"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="-5"
            android:id="@+id/minus5"
            android:layout_gravity="center"
            android:background="#eb1219"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:textSize="20dp"
            android:elevation="0dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="-10"
            android:id="@+id/minus10"
            android:layout_gravity="center"
            android:background="#eb1219"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>